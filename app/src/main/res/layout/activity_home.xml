<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"

        android:layout_height="0dp"

        app:layout_constraintGuide_percent="0.0" />

    <ImageView
        android:id="@+id/head_sebha"
        android:layout_width="205dp"
        android:layout_height="120dp"

        android:layout_marginBottom="204dp"
        android:src="@drawable/head_sebha_logo"
        app:layout_constraintBottom_toBottomOf="@+id/sebha_body"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideLine"
        app:layout_constraintVertical_bias="0.985"
        app:layout_constraintWidth_percent=".3"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/sebha_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283"
        app:layout_constraintWidth_percent=".7"
        app:srcCompat="@drawable/body_sebha_logo" />

    <TextView
        android:id="@+id/num_dhikr"
        android:layout_width="wrap_content"
        android:layout_height="54dp"

        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="عدد التسبيحات"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/counter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zikr_text"
        app:layout_constraintVertical_bias="0.147" />

    <Button
        android:id="@+id/counter"
        android:layout_width="119dp"
        android:layout_height="96dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/bg"
        android:text="0"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/zikr_text"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_marginTop="36dp"
        android:background="@color/gold"
        android:gravity="center"
        android:padding="10dp"
         android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sebha_body" />


</androidx.constraintlayout.widget.ConstraintLayout>